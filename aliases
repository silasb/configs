# http://www.catonmat.net/blog/git-aliases/
alias ga='git add'
alias gs='git status -sb'
alias gd='git diff'
alias gdc='git diff --cached'
alias gc='git commit'
alias gr='git rm'

alias grep='grep -i --color'
#alias ls='ls --color'
alias ec2-instances="aws ec2 describe-instances | jq '.Reservations[] | .Instances[] | {Name: .Tags[].Value, InstanceId, ImageId, PrivateIpAddress, PublicIpAddress, State: .State.Name}'"
alias vi=vim
alias edit="gs | grep ' M ' | awk '{print \$2}' | xargs $EDITOR"
alias le="fzf | xargs $EDITOR"
alias prodc="/usr/local/bin/aptible ssh rails c --app beam-api"
alias prods="/usr/local/bin/aptible ssh rails c --app beam-staging"
alias less='less -R'
alias ta='tmux attach -t'
alias ts='tmux new -s'
alias bmysql='mysql -h 127.0.0.1 -u beam_app_dev -p beam_app_dev'

alias webservices="docker-compose -f .docker/web-services.yml"
alias lg='lazygit'
alias k=kubectl

alias a="arch -x86_64"
alias ibrew="arch -x86_64 /usr/local/Homebrew/bin/brew"
